{
  "name": "voice-chat-app",
  "version": "1.0.0",
  "description": "Голосовой чат для общения с друзьями",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "server": "node server-cloud.js",
    "server-media": "node server-mediasoup.js",
    "server-simple": "node server-simple-media.js",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "dist": "electron-builder --publish=never"
  },
  "keywords": [
    "voice-chat",
    "webrtc",
    "socket.io",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "build": {
    "appId": "com.voicechat.app",
    "productName": "Голосовой Чат",
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "node_modules/electron/**/*"
    ]
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "socket.io": "^4.6.1"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "mediasoup": "^3.19.12",
    "mediasoup-client": "^3.18.1",
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
